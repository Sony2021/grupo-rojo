                    <p class="card-text">Dise침os: @Model.Dise침o</p>
                    <p class="card-text">Cantidad Total: @Model.CantidadTotal</p>
                    <p class="card-text">Colores: @Model.Color</p>
                    <p class="card-text">Precio: @Model.Precio</p>
                    <a class="btn btn-primary d-block mx-auto" style="width: fit-content;" asp-controller="Carrito" asp-action="Add" asp-route-id="@Model.Id">Agregar al Carrito</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-body.text-justify p {
        text-align: justify;
    }
</style>