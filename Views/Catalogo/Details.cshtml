@model grupo_rojo.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-8">
            <div class="card mb-3">
