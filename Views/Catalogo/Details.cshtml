                    <div class="card-img-actions">
                        <img class="img-responsive" width="96" height="150" src="@Model.ImageURL" alt="Imagen del Producto" />
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title text-center">Nombre: @Model.Articulo</h5>
