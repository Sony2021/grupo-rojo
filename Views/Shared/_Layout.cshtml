<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -flotex</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/grupo_rojo.styles.css" asp-append-version="true" />
    
    
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid color-azul">
                <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index">
                 <div class="logo-container">
                    <img src="/imagenes/logo.png" alt="FLOTEX Logo">
                    <span class="fs-1 golden-text">FLOTEX</span>  
                    <p class="pacifico-regular golden-text">Calidad y tendencia textil</p> 
                 </div>   
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-nav-container ">  <ul class="navbar-nav flex-grow-1 text-center ">
                    <ul class="navbar-nav flex-grow-1 golden-text">
                        <li class="nav-item">
                            <a class=" nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <p class="golden-text">Home</p>
                                </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark golden-header" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <p class="golden-text">Privacy</p>
                                </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contacto" asp-action="Index">
                                <p class="golden-text">Contacto</p>
                                </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalogo" asp-action="Index">
                                <p class="golden-text">Catalogo</p>
                                </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carrito" asp-action="Index">
                                
                                <img src="/imagenes/carrito.png" alt="Icono del carrito de compras" class="carrito-icono">
                                </a>
                        </li>
                    </ul>
                    <li class="nav-item" >
                            <form asp-controller="Catalogo" asp-action="Index">
                                <input type="text" name="searchString"><input type="submit" value="Buscar" />
                            </form>
                    </li> 
                        
                </div>   
                      
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - grupo_rojo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
