@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    <li class="nav-item">
            <form asp-controller="Catalogo" asp-action="Index">
                                <input type="text" name="searchString"><input type="submit" value="Buscar" />
            </form>
    </li>
@if (SignInManager.IsSignedIn(User))
{
     <li class="nav-item">
        <form asp-controller="Carrito" asp-action="Index">
                <button type="submit" style="border: none; background: none; cursor: pointer;">
                <img src="/imagenes/carrito.png" alt="Carrito" style="width: 50px; height: 50px;">
        </button>
        </form>
    </li>
    

    <li class="nav-item">
        <a  class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color: rgb(148, 132, 43);">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link " style="color: rgb(148, 132, 43);">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
        <p class="golden-text letras-logeo ">Regístrate</p>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
        <p class="golden-text letras-logeo ">Inicia Sesión</p>
        </a>
    </li>
}
</ul>
